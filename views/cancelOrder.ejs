    <div class="container">
        <div class="message">
            <h1>Order Cancel!</h1>
            <p>Your order has been successfully cancelled.</p>
        </div>
        


        <div class="logout-container">
            <button class="logout-button" onclick="goBack()">Back</button>
        </div>
    </div>
    
    <script>
        // JavaScript function to go back to another page
        function goBack() {
