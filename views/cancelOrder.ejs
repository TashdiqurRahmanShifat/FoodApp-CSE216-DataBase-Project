        /* Style for the logout button */
        .logout-button {
            background-color: #f15a24;
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            cursor: pointer;
            font-size: 16px;
        }
        .logout-button:hover{
            background-color: #15e431;
        }
        .login-image {
            position: absolute;
    width: 30%; /* Optional: To ensure the image fits within the container */
    height: auto;
